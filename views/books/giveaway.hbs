<h1>{{user.username}}'s Donation List</h1>


<div class="flexed-page">
  <div class="centered-card">
    <section class="book-container">
      {{#each user.booksToGive}}
      <section class="book-card">
        <div class="cards">
          <p class="p-card">Title: <a href="/book/{{this._id}}">{{this.title}}</a> </p>
          <p class="p-card">Author: {{this.author}}</p>
          <p class="p-card">Condition: {{this.condition}}</p>
          <p class="p-card">Genre: {{this.genre}}</p>
          <button class="green"><a href="/book/edit/{{this._id}}">Edit book</a></button>
          <button class="orange"><a href="/book/delete/{{this._id}}">Delete book</a></button>
          </br>
        </div>
      </section>
      {{/each}}
    </section>

  </div>

  <button class="green centered-btn">
    <a href="/new-book">Upload a new book</a>
  </button>
</div>