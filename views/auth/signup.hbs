<form action="/auth/signup" method="POST" class="signup">
   <h1>Just a few steps away from entering a book-wormhole!</h1>
   <div>
      <label for="username">Username*</label>
      <br>
      <input type="text" name="username" placeholder="Your username" id="username">
   </div>
   <div>
      <label for="password">Password*</label>
      <br>
      <input type="password" id="password" name="password" placeholder="Your password">
   </div>
   <div>
      <label for="email">Email*</label>
      <br>
      <input type="text" id="email" name="email" placeholder="Your email">
   </div>
   <div>
      <label for="bio">Bio</label>
      <br>
      <input type="text" id="bio" name="bio" placeholder="Your bio (optional)">
   </div>
   <div>
      <label for="location">Location</label>
      <br>
      <input type="text" id="location" name="location" placeholder="Your location (optional)">
   </div>
   <button class="green" type="submit">Sign Up</button>
</form>
{{!-- same as the login page --}}
{{#if errorMessage}}
<h3 style='color: red'>{{errorMessage}}</h3>
{{/if}}